{
  "name": "cashew-playground",
  "scripts": {
    "release": "cd projects/ngneat/cashew && standard-version --infile ../../../CHANGELOG.md",
    "contributors:add": "all-contributors add",
    "hooks:pre-commit": "node hooks/pre-commit.js",
    "build": "ng build",
    "build:lib": "ng build @ngneat/cashew && npm run copy-readme",
    "start": "ng serve",
    "e2e": "ng e2e",
    "test": "npm run test:lib",
    "test:lib": "npm run test --prefix projects/ngneat/cashew",
    "test:lib:watch": "npm run test:watch --prefix projects/ngneat/cashew",
    "test:headless": "cross-env CI=true npm run test:lib",
    "ng": "ng",
    "lint": "ng lint",
    "commit": "git-cz",
    "copy-readme": "cp README.md dist/ngneat/cashew"
  },
  "dependencies": {
    "@angular/animations": "~12.0.1",
    "@angular/common": "~12.0.1",
    "@angular/compiler": "~12.0.1",
    "@angular/core": "~12.0.1",
    "@angular/forms": "~12.0.1",
    "@angular/platform-browser": "~12.0.1",
    "@angular/platform-browser-dynamic": "~12.0.1",
    "@angular/router": "~12.0.1",
    "rxjs": "~6.6.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.1",
    "@angular/cli": "~12.0.1",
    "@angular/compiler-cli": "~12.0.1",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "typescript": "~4.2.3",
    "@angular/language-service": "^12.0.3",
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-angular": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^24.0.25",
    "all-contributors-cli": "^6.13.0",
    "codelyzer": "^6.0.2",
    "cross-env": "^7.0.3",
    "git-cz": "^4.0.0",
    "husky": "^3.0.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^24.9.0",
    "jest-preset-angular": "^8.0.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "lint-staged": "^9.2.0",
    "ng-packagr": "^12.0.3",
    "prettier": "^2.3.1",
    "standard-version": "^6.0.1",
    "ts-jest": "^24.1.0",
    "ts-node": "~7.0.0",
    "tslib": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "npm run hooks:pre-commit && lint-staged",
      "pre-push": "npm run test:headless"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,ts,html,component.html}": [
      "prettier --write",
      "git add"
    ]
  }
}
